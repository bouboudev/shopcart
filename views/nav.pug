nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
    if admin
        a.navbar-brand(href='/admin') Espace Admin
    else 
        a.navbar-brand(href='/') Shop

    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNavAltMarkup
        if admin
            .navbar-nav.ml-auto
                a.nav-item.nav-link(href='/') Shop
        else
            .navbar-nav
                a.nav-item.nav-link(href='/', class=(path === '/' ? 'active' : '')) Accueil
                a.nav-item.nav-link(href='/panier', class=(path === '/panier' ? 'active':'')) Panier
            .navbar-nav.ml-auto
                a.nav-item.nav-link(href='/admin') Admin

                //- class active avec le path dans le controller